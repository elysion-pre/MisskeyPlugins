  {font: "SERIF_B", enable: Plugin:config.SERIF_B_enable, name: Plugin:config.SERIF_B_name},
  {font: "SERIF_I", enable: Plugin:config.SERIF_I_enable, name: Plugin:config.SERIF_I_name},
