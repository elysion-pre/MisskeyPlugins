]

each (let data, CONFIG_DATA) {
  if (data.enable == true) {
    Plugin:register_post_form_action(data.name, @(form, update) {
      var text = form.text
      each (let font, FONT_LIST[data.font]) {
        text = text.replace(font[0], font[1])
      }
      update("text", text)
    })
  }
}