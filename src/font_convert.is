  {font: "SANS_I_B", enable: Plugin:config.SANS_I_B_enable, name: Plugin:config.SANS_I_B_name},
  {font: "MONOSPACE", enable: Plugin:config.MONOSPACE_enable, name: Plugin:config.MONOSPACE_name},
